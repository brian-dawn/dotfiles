[merge]
	tool = vimdiff
[mergetool "diffmerge"]
	cmd = diffmerge --nosplash --merge -t1='Local' -t2='Base (merged)' -t3='Remote' --result=$MERGED $LOCAL $BASE $REMOTE
	trustExitCode = true
[mergetool]
	keepBackup = false
[diff]
	tool = vimdiff
[difftool "vimdiff"]
    cmd = vim -f -d \"$LOCAL\" \"$REMOTE\"
[difftool "diffmerge"]
	cmd = diffmerge --nosplash -t1='Local' -t2='Remote' $LOCAL $REMOTE
[user]
	name = Brian Dawn
	email = brian.dawn@code42.com
[push]
	default = upstream
[core]
	excludesfile = /Users/brian.dawn/.gitignore_global
	ignore = dirty
	editor = /usr/bin/vim
	autocrlf = input
[color]
	ui = auto
    grep = always
[difftool]
	prompt = false
[alias]
	d = difftool
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
